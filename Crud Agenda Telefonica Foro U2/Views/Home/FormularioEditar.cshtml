@model Contacto

<div  class="row p-5 mb-4 " id="formularioContainer">
    <form method="post"asp-action="Editar">
        <div class=" col-auto bg-success text-light">
            <h3 class="text-center">Editar Contacto</h3>
        </div>
        <div class="row gap-3 justify-content-center">
            <div class="col-6">
                <label for="Nombre" class="form-label m-2">Nombre </label>
                <input name="Nombre" asp-for="Nombre" type="text" class="form-control"  id="NombreContacto"/>
            </div>

            <div class="col-6">
                <label for="NumCelular" class="form-label m-2">Numero Celular</label>
                <input name="NumCelular" asp-for="NumCelular" type="text" class="form-control"  />
            </div>
            
            <div class="col-6">
                <label for="NumFijo" class="form-label m-2">Telefono Fijo</label>
                <input name="NumFijo" asp-for="NumFijo" type="text" class="form-control"  id="TelefonoFijo"/>
            </div>
            
            <div class="col-6">
                <label for="NumResidencial" class="form-label m-2">Telefono Residencial</label>
                <input name="NumResidencial" asp-for="NumResidencial"  type="text" class="form-control"  id="TelefonoResidencial"/>
            </div>
            
            <div class="col-6">
                <label for="NumTrabajo" class="form-label m-2">Telefono Trabajo</label>
                <input name="NumTrabajo" asp-for="NumTrabajo" type="text" class="form-control" id="TelefonoTrabajo"/>
            </div>
            

            <div class="col-6 d-flex justify-content-center gap-2 ">
                <button type="submit"  class=" btn btn-success d-block">Editar</button>
                <a href="/" class="btn btn-danger d-block">Cancelar</a>
            </div>
        
            
        </div>
    </form>
</div>